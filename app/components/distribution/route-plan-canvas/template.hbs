{{distribution/tool-bar
  date=date
  routeTemplates=routeTemplates
  newRoutePlan=this.attrs.newRoutePlan
  onDateSelected=this.attrs.onDateSelected
  applyTemplate=this.attrs.applyTemplate
  saveRoutePlans=this.attrs.saveRoutePlans}}

<div class="row stretch">
  {{distribution/open-orders
    orderGroups=openOrderGroups
    registerDropContainer=(action 'registerDropContainer')}}

  {{#each routePlans as |rp index|}}
    {{distribution/route-plan
      index=index
      model=rp
      users=users
      saveAsTemplate=this.attrs.saveAsTemplate
      destroyRoutePlan=this.attrs.destroyRoutePlan
      routePlanChanged=this.attrs.routePlanChanged
      registerDropContainer=(action 'registerDropContainer')
      registerRoutePlan=(action 'registerRoutePlan')}}
  {{/each}}
</div>
