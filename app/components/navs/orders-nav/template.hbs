<div class="row">
  {{ui/date-picker
    date=deliveryDate
    onSelected=onDateSelected
    format="ddd MM-DD-YYYY"}}
</div>

<div class="row filterBar">
  {{ui/filter-bar
      placeholder="Search..."
      onChange=(action "filterOrders")}}

  <div class="col center baseline">
    <div class="row">
      {{ui/toggle-button
        class="includeDraft"
        selected=includeDraft
        label="Draft"
        click=(action "toggleIncludeDraft")}}
    </div>

    <div class="row">
      {{one-way-checkbox
        includeApproved
        class="includeApproved"
        update=(action (mut includeApproved))}}
        Approved
      </div>
  </div>

  {{#ui/popup-menu}}
    {{#if hasStubAction}}
      {{ui/icon-button
        class="stubOrders"
        flat=true
        label="Stub Orders"
        type="add"
        click=stubOrders}}
    {{/if}}

    {{ui/icon-button
      class="createOrder"
      flat=true
      label="New Order"
      type="add"
      click=onRequestNewOrder}}

    {{#if hasDuplicateAction}}
      {{ui/icon-button
        class="duplicateOrders"
        flat=true
        label="Duplicate Orders"
        type="content_copy"
        disabled=(not hasOrders)
        click=onRequestDuplicateOrders}}
    {{/if}}

  {{/ui/popup-menu}}
</div>

{{lists/grouped-list
    highlightedItem=currentSelectedOrder
    itemClicked=onOrderSelected
    model=groupedOrders}}
