<div class="row headerContainer">
  {{ember-selectize
    content=users
    optionValuePath="content"
    optionLabelPath="content.name"
    selection=model.user
    placeholder="Select a driver" }}

  <div class="col uiContainer">
    {{ui/icon-button
      icon='clear'
      flat=true
      color=colors.DARK_GREY
      padding=0.5
      click=(action 'delete')}}

    {{ui/icon-button
      icon='save'
      class='saveTemplate'
      flat=true
      color=colors.DARK_GREY
      padding=0.5
      click=(action 'saveTemplate')}}

  </div>
</div>

{{#layout/scroll-container}}
  {{#layout/dd-container registerContainer=this.attrs.registerDropContainer registerId=(action this.attrs.registerRoutePlan model)}}
    {{#each model.sortedRouteVisits as |rv|}}
      {{section/distribution/route-visit
        colorScheme=colorScheme
        model=rv
        data-location-hash=rv.locationHash}}
    {{/each}}
  {{/layout/dd-container}}
{{/layout/scroll-container}}
