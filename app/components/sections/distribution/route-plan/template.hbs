{{sections/distribution/route-plan/route-plan-header
    updateRoutePlan=(action updateRoutePlan model "user")
    users=users
    selectedUser=model.user
    delete=(action "delete")
    saveRoutePlanBlueprint=(action "saveRoutePlanBlueprint")
    colorScheme=colorScheme}}

{{#layouts/scroll-container class="routeVisitsContainer"}}
  {{#layouts/dd-container registerContainer=registerDropContainer registerId=(action registerRoutePlan model)}}
    {{#each model.sortedRouteVisits as |rv i|}}
      {{sections/distribution/route-visit
          model=rv
          index=i
          colorScheme=colorScheme
          removeRouteVisit=removeRouteVisit
          data-location-hash=rv.id}}
    {{/each}}
  {{/layouts/dd-container}}
{{/layouts/scroll-container}}
