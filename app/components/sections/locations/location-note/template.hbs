{{ui/title-bar
  title=(if isHidden "Location note +" "Location note -")
  click=(action "toggleOpenClose")
}}
<div class={{if isHidden "chart hidden" "chart"}}>
  <textarea
  rows="15"
  cols="100"
  name="note"
  value="{{locationNote}}"
  oninput={{action "noteChanged"}}
  onchange={{action "noteChanged"}}
  onblur={{action save locationNote}}>
  </textarea>
</div>
