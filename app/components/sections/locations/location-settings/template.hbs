<input
  type="text"
  name="name"
  class="name"
  placeholder="name"
  value="{{model.name}}"
  oninput={{action 'fieldChanged' 'name'}}
  onchange={{action 'fieldChanged' 'name'}}
  onblur={{action save}}>

<input
  type="text"
  name="code"
  class="code"
  placeholder="code"
  value="{{model.code}}"
  oninput={{action 'fieldChanged' 'code'}}
  onchange={{action 'fieldChanged' 'code'}}
  onblur={{action save}}>

<input
  type="text"
  name="deliveryRate"
  class="deliveryRate"
  placeholder='delivery rate'
  value="{{model.deliveryRate}}"
  oninput={{action 'fieldChanged' 'deliveryRate'}}
  onchange={{action 'fieldChanged' 'deliveryRate'}}
  onblur={{action save}}>

{{ui/icon-button
  type='remove'
  flat=true
  color=colors.DARK_GREY
  padding=0.5
  click=delete}}
