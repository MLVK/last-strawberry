<div class="row toolbar">

  <div class="col">
    <span class="company">
      {{model.location.company.name}}
    </span>
    <span class="locationInfo">
      {{model.location.code}} - {{model.location.name}}
    </span>

    <div class="row invoiceHeaderContainer">
      <span class="invoiceLabel">
        Invoice
      </span>
      <span class="salesOrderNumber">
        INV-042116-19281
      </span>
    </div>
  </div>

  {{ui/icon-button
    label='delete'
    type='close'
    class='delete'
    flat=true
    backgroundColor=colors.DARK_GREY
    size=1.2
    click=deleteOrder}}
</div>

{{#each model.orderItems as |orderItem i|}}
  {{sections/sales-orders/order-item-editor
      index=i
      model=orderItem
      update=updateOrderItem
      save=saveOrderItem
      delete=deleteOrderItem}}
{{/each}}
