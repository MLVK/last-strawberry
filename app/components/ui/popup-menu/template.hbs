{{ui/icon-button
  class='trigger'
  type=(or icon 'menu')
  size=1.4
  padding=0
  flat=true
  color=colors.DARK_GREY
  backgroundColor=colors.BABY_BLUE
  click=(action 'toggle')}}

{{#if showMenu}}
  {{#tether-dialog
      hasOverlay=false
      attachment='top left'
      targetAttachment='right left'
      target=this}}
      <div class="content" style={{menuColors}}>
        {{yield}}
      </div>
  {{/tether-dialog}}
{{/if}}
