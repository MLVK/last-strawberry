    <div class="row">
      {{ui/input-action-bar
        class='create-new-company'
        type='add'
        placeholder='Create new company...'
        submit=(route-action 'createNewCompany')}}
    </div>
  </div>

  <div class="col-5">
    {{outlet}}
  </div>
</div>
