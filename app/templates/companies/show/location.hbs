{{model.name}}

{{section/location/item-desires
    itemDesires=model.itemDesires
    items=items
    change=(route-action 'updateItemDesires')}}

{{section/location/visit-schedule
    visitDays=model.visitDays
    visitWindows=model.visitWindows
    visitDaysChanged=(route-action 'updateVisitDays')
    visitWindowDaysChanged=(route-action 'visitWindowDaysChanged')
    visitWindowChanged=(route-action 'visitWindowChanged')
    createVisitWindow=(route-action 'createVisitWindow')
    saveVisitWindow=(route-action 'saveVisitWindow')}}

{{section/location/address-picker
  addresses=addresses
  currentAddress=model.address
  addressChanged=(route-action 'addressChanged')
  addressAttributesChanged=(route-action 'addressAttributesChanged')}}
