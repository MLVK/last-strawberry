<div class="col stretch">
  {{sections/distribution/tool-bar
      date=date
      canCreateRoutePlans=true
      routePlans=activeRoutePlans
      routePlanBlueprints=routePlanBlueprints
      createRoutePlan=(action "createRoutePlan")
      onDateSelected=(action "onDateSelected")
      printFulfillmentDocuments=(action "printFulfillmentDocuments")
      generateRoutePlanCSV=(action "generateRoutePlanCSV")
      applyTemplate=(action "applyTemplate")}}
  {{sections/distribution/route-plan-canvas
      date=date
      routePlans=activeRoutePlans
      routeVisits=activeRouteVisits
      selectedRouteVisit=selectedRouteVisit
      saveRoutePlanBlueprint=(action "saveRoutePlanBlueprint")
      destroyRoutePlan=(action "destroyRoutePlan")
      onRouteVisitUpdate=(action "onRouteVisitUpdate")
      removeRouteVisit=(action "removeRouteVisit")
      updateRoutePlan=(action "updateRoutePlan")
      selectRouteVisit=(action "selectRouteVisit")
      deSelectRouteVisit=(action "deSelectRouteVisit")
      users=drivers}}
</div>
{{sections/distribution/visit-map
    openRouteVisits=openRouteVisits
    routePlans=activeRoutePlans
    selectedRouteVisit=selectedRouteVisit
    selectRouteVisit=(action "selectRouteVisit")}}