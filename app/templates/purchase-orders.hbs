{{navs/orders-nav
    currentSelectedOrder=currentSelectedOrder
    deliveryDate=deliveryDate
    onDateSelected=(route-action 'onDateSelected')
    onRequestNewOrder=(action 'onRequestNewOrder')
    onOrderSelected=(route-action 'onOrderSelected')
    orders=filteredOrders}}
{{outlet}}

{{#if showCreateOrderModal}}
  {{#tether-dialog}}
    {{modals/item-selector
        title='Create new purchase order'
        placeholder='Search for location'
        model=vendorLocations
        close=(action 'closeCreateOrder')
        onSubmit=(route-action 'createOrder')}}
  {{/tether-dialog}}
{{/if}}
